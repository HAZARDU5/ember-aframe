<a-scene>
  <a-assets>
    <a-asset-item id="headObj" src="/tex.obj"></a-asset-item>
    <a-asset-item id="headMtl" src="/tex.mtl"></a-asset-item>
  </a-assets>

  {{outlet}}

  <a-entity position="-1.5 3 -4">
    <a-entity
      layout="
        type: line;
        margin: 1.5
      "
      position="0 .25 0"
      animation__hover="
        property: position;
        dir: alternate;
        loop: true;
        easing: easeInOutSine;
        to: 0 -.25 0
      "
    >
      {{a-back-button
        "Home"
        shouldHide=shouldHideBackButton
        click=(transition-to "index")
      }}
      {{a-back-button
        "Hello World"
        click=(transition-to "hello-world")
      }}
      {{a-back-button
        "360 Image Gallery"
        click=(transition-to "360-image-gallery")
      }}
    </a-entity>
  </a-entity>

  {{#each otherPeople as |person|}}
    {{other-person
      obj="#headObj"
      mtl="#headMtl"
      params=person.params
    }}
  {{/each}}

  {{my-camera
    rotX=rotX
    rotY=rotY
    posX=posX
    posY=posY
    posZ=posZ
    cameraMoveSlow=(action "updateQueryParams")
    cameraMoveFast=(action "sendData")
  }}
</a-scene>