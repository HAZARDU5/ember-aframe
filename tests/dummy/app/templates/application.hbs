<a-scene>
  {{outlet}}

  <a-entity layout="type: line; margin: 1.5" position="-1.5 {{linksHoverTop}} -4"
    animation__hover="property: position; dir: alternate; loop: true; easing: easeInOutSine; to: -1.5 {{linksHoverBottom}} -4">
    {{a-back-button class="link" text="Home"
      shouldHide=shouldHideBackButton
      click=(transition-to "index")
    }}
    {{a-back-button class="link" text="Hello World"
      click=(transition-to "hello-world")
    }}
    {{a-back-button class="link" text="360 Image Gallery"
      click=(transition-to "360-image-gallery")
    }}
  </a-entity>

  {{#each otherPeople as |person|}}
    {{#with person.params as |params|}}
      <a-box
        rotation="{{params.rotX}} {{params.rotY}} 0"
        position="{{params.posX}} {{params.posY}} {{params.posZ}}"
      >
      </a-box>
    {{/with}}
  {{/each}}

  {{my-camera rotX=rotX rotY=rotY posX=posX posY=posY posZ=posZ
    cameraMove=(action "updateQueryParams")}}
</a-scene>